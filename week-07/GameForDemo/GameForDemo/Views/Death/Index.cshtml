@model GameForDemo.ViewModel.ImageViewModel

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <style>
        .image {
            display: inline-block;
            cursor: pointer;
            height: 300px;
            width: auto;
            align-items: center;
            justify-content: center;
            position: relative;
            flex-direction: row;
        }

        button:active {
            position: relative;
            top: 3px;
            background-color: mediumvioletred;
        }


        .card {
            align-items: center;
            justify-content: center;
            position: relative;
            height: 300px;
            width: auto;
            flex-direction: row;
        }

        .container {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            justify-content: center;
        }
        p 
        {
            color:red;
            font-size:30px;
        }

        table, td {
            border: 1px solid black;
            table-layout: fixed;
        }

        td {
            padding: 5px;
            text-align: left;
            width: 200px;
        }
    </style>
</head>
<body>
    <div class="container">
        <form class="card">            
                <img class="image" src="@Model.StartImageList[0].StartImageLink" alt="submit">            
        </form>

        <form class="card">            
                <img class="image" src="@Model.StartImageList[1].StartImageLink" alt="submit">            
        </form>

        <form class="card">            
                <img class="image" src="@Model.StartImageList[2].StartImageLink" alt="submit">
        </form>
    </div>      
      
    <table style="width:800px">
        <tr>

            <td>Number Of your Wins</td>
            <td>Number Of your deaths</td>
        </tr>
        <tr>
            <td>@Model.NumberOfWins</td>
            <td>@Model.NumberOfDeaths</td>

        </tr>

    </table>
    <p>You have benn hacked!!!</p>

    <form action="/death/restart" method="post">
        <button type="submit">Restart!</button>
    </form>

</body>
</html>

