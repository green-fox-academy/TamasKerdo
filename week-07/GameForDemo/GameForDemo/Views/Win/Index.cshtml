@model GameForDemo.ViewModel.ImageViewModel

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <style>
        .image {
            display: inline-block;
            cursor: pointer;
            height: 300px;
            width: auto;
            align-items: center;
            justify-content: center;
            position: relative;
            flex-direction: row;
        }

        button:active {
            position: relative;
            top: 3px;
            background-color: mediumvioletred;
        }


        .card {
            align-items: center;
            justify-content: center;
            position: relative;
            height: 300px;
            width: auto;
            flex-direction: row;
        }

        .container {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            justify-content: center;
        }

        p {
            color: green;
            font-size: 30px;
        }
    </style>
</head>
<body>
    <div class="container">
        <form class="card">
            <img class="image" src="@Model.StartImageList[0].StartImageLink" alt="submit">
        </form>

        <form class="card">
            <img class="image" src="@Model.StartImageList[1].StartImageLink" alt="submit">
        </form>

        <form class="card">
            <img class="image" src="@Model.StartImageList[2].StartImageLink" alt="submit">
        </form>
    </div>
    <form action="/win/restart" method="post">
        <button type="submit">Restart!</button>
    </form>
    <p>Hacker is found!!!</p>
</body>
</html>