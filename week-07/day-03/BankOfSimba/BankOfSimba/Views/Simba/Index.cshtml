@model BankOfSimba.ViewModels.AccountViewModel

    <html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <style>
        .King 
        {
            background-color :gold;
        }
        .NotKing {
            background-color: khaki;
        }

        table, td {
            border: 1px solid black;
            table-layout: fixed;
        }

        td {
            padding: 5px;
            text-align: left;
            width :  200px;
        }
form {

        }
        

    </style>
</head>
<body>

    <form action="/add" method="post">
        Name:
        <input type="text" name="Name" value="">
        <br />
        Balance:
        <input type="number" name="Balance" value="">
        AnimalType:
        <input type="text" name="AnimalType" value="">
        <br />
        <input type="submit" value="Submit">
    </form>

    @{
        var counter = 0;
        @foreach (var account in Model.BankAccountList)
        {
            if (@account.AnimalType == "King")
            {
                
                <table style="width:800px">
                    <tr class="King">
                        <td>@counter</td>
                        <td>@account.Name</td>
                        <td>@account.Balance.ToString("0.00") zebra</td>                        
                        <td>@account.AnimalType</td>
                    </tr>                    
                </table>
            }
            else
            {
                <table style="width:800px">
                    <tr class="NotKing">
                        <td>@counter</td>
                        <td>@account.Name</td>
                        <td>@account.Balance.ToString("0.00") zebra</td>
                        <td>@account.AnimalType</td>
                    </tr>
                </table>
            }
            counter++;
        }
    }
  </body>
</html>
